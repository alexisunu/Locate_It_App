<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".ReportarIncidente">

    <!-- Botón Reportar anclado abajo -->
    <Button
        android:id="@+id/btnReportarIncidente"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="12dp"
        android:text="Reportar Incidente"
        android:textAllCaps="false"
        app:backgroundTint="#D32F2F"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:cornerRadius="8dp" />

    <!-- Contenido desplazable arriba del botón -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/btnReportarIncidente">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Barra superior -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="#F44336"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/btnBack"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/arrow"
                    app:tint="#FFFFFF" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Reportar Incidente"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <!-- Mapa -->
            <org.osmdroid.views.MapView
                android:id="@+id/mapIncidente"
                android:layout_width="match_parent"
                android:layout_height="200dp" />

            <!-- Tipo de Incidente -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="12dp"
                android:padding="16dp"
                android:background="@drawable/incident_type_container_bg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tipo de Incidente"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" 
                    android:layout_marginBottom="12dp"/>

                <GridLayout
                    android:id="@+id/gridTiposIncidente"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="2"
                    android:useDefaultMargins="true">

                    <!-- Accidente -->
                    <LinearLayout
                        android:id="@+id/btnAccidente"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp"
                        android:background="@drawable/incident_type_button_bg">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@android:drawable/ic_dialog_alert"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Accidente"/>
                    </LinearLayout>

                    <!-- Congestión -->
                    <LinearLayout
                        android:id="@+id/btnCongestion"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp"
                        android:background="@drawable/incident_type_button_bg">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@android:drawable/ic_dialog_info"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Congestión"/>
                    </LinearLayout>

                    <!-- Construcción -->
                    <LinearLayout
                        android:id="@+id/btnConstruccion"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp"
                        android:background="@drawable/incident_type_button_bg">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@android:drawable/ic_menu_manage"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Construcción"/>
                    </LinearLayout>

                    <!-- Otro -->
                    <LinearLayout
                        android:id="@+id/btnOtro"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp"
                        android:background="@drawable/incident_type_button_bg">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@android:drawable/ic_menu_help"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Otro"/>
                    </LinearLayout>

                </GridLayout>

            </LinearLayout>

            <!-- Foto -->
            <LinearLayout
                android:id="@+id/btnAgregarFotoIncidente"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="12dp"
                android:gravity="center"
                android:background="#EEEEEE"
                android:orientation="vertical"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/ivAgregarFotoIncidente"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iconoCamara"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/camara"
                    app:tint="#000000" />

                <TextView
                    android:id="@+id/txtAgregarFoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Agregar Foto"
                    android:textColor="#000000"
                    android:paddingTop="6dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>