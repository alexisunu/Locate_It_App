<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- PERMISOS DE UBICACIÓN E INTERNET (YA ESTABAN) -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- ¡PERMISOS DE CÁMARA AÑADIDOS! -->
    <uses-permission android:name="android.permission.CAMERA" />
    <!-- Es buena práctica declarar las características que usa tu app -->
    <uses-feature android:name="android.hardware.camera" android:required="false" />


    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Locate_It_App">

        <!-- 1. ACTIVITY DE INICIO: AHORA ES MainActivity -->
        <activity
            android:name=".RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <!-- El intent-filter se mueve aquí para que esta sea la actividad principal -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 2. Las otras activities, declaradas normalmente -->
        <activity
            android:name=".incidentes_mapa"
            android:exported="false" />

        <activity
            android:name=".lugares_mapa"
            android:exported="false" />

    </application>

</manifest>
